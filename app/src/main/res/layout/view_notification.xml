<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_view_notification_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/bg_filled_logo" />

        <TextView
            android:id="@+id/text_view_notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view_notification_logo"
            android:layout_marginTop="15dp"
            android:text="Title"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_view_notification_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image_view_notification_logo"
            android:layout_below="@id/text_view_notification_title"
            android:text="This is a message"
            android:textSize="12sp"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/button_mark_as_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_notification_message"
            android:layout_toEndOf="@id/image_view_notification_logo"

            android:layout_marginTop="10dp"
            android:layout_alignParentEnd="true"
            android:text="Mark as Read"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>