<resources>

    <!-- Filled Button Style -->
    <style name="Widget.MyApp.Button.Filled" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/material_orange_dark</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawableLeft">@drawable/ic_default</item> <!-- Default icon -->
    </style>

    <!-- Outlined Button Style -->
    <style name="Widget.MyApp.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/black</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:drawableLeft">@drawable/ic_default</item> <!-- Default icon -->
    </style>

    <!-- Tonal Button Style -->
    <style name="Widget.MyApp.Button.Tonal" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/material_orange_light</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableLeft">@drawable/ic_default</item> <!-- Default icon -->
    </style>

</resources>