<!-- res/values/styles.xml -->
<resources>

    <!-- Base Button -->
    <style name="Button.Base" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">8dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconGravity">textStart</item>
    </style>


    <!-- Circular Profile Photo -->
    <style name="CircularProfilePhoto" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">125dp</item>
        <item name="cardElevation">4dp</item>
    </style>


    <!-- Linear Progress Indicator -->
    <style name="LinearProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="trackColor">@color/material_blue_dark</item>
        <item name="indicatorColor">@color/material_blue_light</item>
        <item name="trackCornerRadius">8dp</item>
        <item name="trackThickness">4dp</item>
        <item name="android:indeterminate">true</item>
    </style>
</resources>